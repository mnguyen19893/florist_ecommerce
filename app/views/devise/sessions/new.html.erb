<div class="hero is-fullheight">
  <div class="hero-body is-justify-content-center is-align-items-center">
    <div class="columns is-flex is-flex-direction-column box">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: 'label' %>
          <div class="control">
            <%= f.email_field :email, class: 'input', autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, class: 'input', autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <div class="control">
              <%= f.check_box :remember_me, class: 'checkbox' %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end %>

        <div class="field">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'has-text-primary' %><br/>
          <% end %>
        </div>

        <div class="actions control">
          <%= f.submit "Log in", class: 'button is-primary is-fullwidth' %>
        </div>
      <% end %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p>
          Don't have an
          account? <%= link_to "Sign up", new_registration_path(resource_name), class: 'has-text-primary' %><br/>
        </p>
      <% end %>

    </div>
  </div>
</div>
<%#= render "devise/shared/links" %>
