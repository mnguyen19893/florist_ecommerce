<% if user_signed_in? %>
  <% if cart.include?(product) %>
    <%= button_to cart_path(product), method: :delete, class: 'button is-danger is-fullwidth' do %>
      Remove From Cart
    <% end %>
  <% else %>
    <%= form_with url: cart_index_path, method: :post do %>
      <%= hidden_field_tag(:id, product.id) %>
      <%= button_tag 'Add to cart', class: 'button is-warning is-fullwidth' %>
    <% end %>
  <% end %>
<% end %>